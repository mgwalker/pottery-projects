<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/simple.css@0.1.3/dist/simple.min.css"
    />
    <link rel="stylesheet" href="main.css" />
  </head>
  <body>
    {{#major}}
    <h1>{{ name }}</h1>
    {{#minor}}
      <div class="indented">
        <h2>{{ name }}</h2>
        {{#children}}
        {{#first}}
        <ul>
        {{/first}}
          <li>
            <div class="item">
              <h3>{{ name }}</h3>{{ description }}
            </div>
          </li>
        {{#last}}
        </ul>
        {{/last}}
        {{/children}}
        {{^children}}
        <em class="indented">(nothing currently)</em>
        {{/children}}
      </div>
    {{/minor}}
    {{#children}}
    {{#first}}
    <ul>
    {{/first}}
      <li>
        <div class="item">
          <h3>{{ name }}</h3>{{ description }}
        </div>
      </li>
    {{#last}}
    </ul>
    {{/last}}
    {{/children}}
    {{/major}}
  </body>
</html>
